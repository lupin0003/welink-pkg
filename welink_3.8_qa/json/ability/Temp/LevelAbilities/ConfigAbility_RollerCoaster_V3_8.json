                        "ChangeSpeed1":[
                            {
                                "$type": "DebugLog",
                                "content": "ChangeSpeed1",
                            },
                            {
                                "$type": "SetCurveProgressInfoToGlobalValue",
                                "baseKey": "TEST_GV_",
                            },
                            {
                                "$type": "ModifyCurveBaseVelocity",
                                "mode": "ByStep",
                                "targetVelocity": "%TEST_GV_0",
                                "targetStep": "%TEST_GV_1",
                                "duration" : 0,
                            },
                        ],
                        "ChangeSpeed2":[
                            {
                                "$type": "DebugLog",
                                "content": "ChangeSpeed2",
                            },
                            {
                                "$type": "SetCurveProgressInfoToGlobalValue",
                                "baseKey": "TEST_GV_",
                            },
                            {
                                "$type": "ModifyCurveBaseVelocity",
                                "mode": "ByFrame",
                                "targetVelocity": "%TEST_GV_0",
                                "targetStep": 0,
                                "duration" : "%TEST_GV_1",
                            },
                        ],
                        "FlushCurveMove":[
                            {
                                "$type": "DebugLog",
                                "content": "FlushCurveMove",
                            },
                            {
                                "$type": "FlushCurveMoveByStepInterval",
                            },
                        ],
                        "SetByBuffer":[
                            {
                                "$type": "DebugLog",
                                "content": "SetByBuffer",
                            },
                            {
                                "$type": "SetTargetCurveByBuffer",
                            },
						],
					},
				},
            ],
            "modifiers": {
                "Avatar_Switch_AddSkillInfo":{
                    "onAdded": [
                        {
                            "$type": "AddAvatarSkillInfo",
                            "skillID": 20350,
                            "doOffStage": true,
                        },
                        {
                            "$type": "AvatarSkillStart",  //这是用来让它装备瞬间闪一下
                            "skillID": 20350,
                            "cdRatio": 0.1,
                        },
                        {
                            "$type": "AddAvatarSkillInfo",
                            "skillID": 20351,
                            "doOffStage": true,
                        },
                        {
                            "$type": "AvatarSkillStart",  //这是用来让它装备瞬间闪一下
                            "skillID": 20351,
                            "cdRatio": 0.1,
                        },
                    ],
					"onRemoved":
                    [
						{
							"$type": "RemoveAvatarSkillInfo",
							"skillID": 20350,
							"refreshAfterRemove": true,
							"doOffStage": true,
						},
						{
							"$type": "RemoveAvatarSkillInfo",
							"skillID": 20351,
							"refreshAfterRemove": true,
							"doOffStage": true,
						},
					],
                },
                "Avatar_Switch_SwitchSkill":{
                    "modifierMixins": [
						{
							"$type": "SwitchSkillIDMixin",
							"priority": "Playmode",
							"skillIndex": 4,
							"skillID": 20350,
						},
						{
							"$type": "SwitchSkillIDMixin",
							"priority": "Playmode",
							"skillIndex": 1,
							"skillID": 20351,
						},
                    ]
                }
            }
        }
    },

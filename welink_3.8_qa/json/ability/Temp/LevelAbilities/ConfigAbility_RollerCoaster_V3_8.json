[
    {
        "Default":{
            "$type": "ConfigAbility",
            "abilityName": "TeamAbility_RollerCoaster_WhiteBox",
            "onAdded": [
                {
                    "$type": "AttachModifier",
                    "modifierName": "Avatar_Switch_AddSkillInfo"
                },
                {
                    "$type": "AttachModifier",
                    "modifierName": "Avatar_Switch_SwitchSkill"
                }
            ],
            "abilityMixins": [
				{
                    "$type": "LevelCurveMixin",
                    "globalValueKeys": ["TEST_GV_0", "TEST_GV_1"],
